class Solution
{
    public:
    void sort012(int arr[], int n)
    {
        int a=0;
    int b=0;
    int c=0;
    for(int i=0;i<n;i++){
        if(arr[i] == 0){
            a++;
        }
        if(arr[i] == 1){
            b++;
        }
        if(arr[i] == 2){
            c++;
        }
        }
    for(int i=0;i<a;i++){
        arr[i] = 0;
    }
    for(int i=a;i<a+b;i++){
        arr[i] = 1;
    }
    
    for(int i=a+b ; i<n;i++){
        arr[i]=2;
    }
    
 
    
    }
    
};
